  /* ===== Card Grid ===== */
  .card-container {
    display: flex;            /* flex row */
    flex-wrap: wrap;          /* wrap to new line if needed */
    gap: 20px;                /* space between cards */
    margin: 0 20px 20px 20px;
  }
  .card {
    flex: 1 1 220px;          /* grow, shrink, base width 220px */
    min-width: 0;             /* allow shrinking */
    background: white;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    display: flex;            /* make card itself flex column */
    flex-direction: column;
  }
  .card h3 { margin: 0 0 10px; }
  .card p { margin: 0 0 10px; flex-grow: 1; } /* flexible content pushes button down */
  .card button {
    align-self: flex-end;     /* override card's align-items */
    padding: 5px 10px;
    background: #1d4ed8;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  /* ===== Footer ===== */
  footer {
    display: flex;                 /* flex row */
    justify-content: space-around; /* distribute items evenly */
    align-items: center;           /* vertical center */
    padding: 15px 0;
    background: #1e293b;
    color: white;
  }

  /* ===== Demo order & special alignment ===== */
  .card:nth-child(1) { order: 2; }      /* move first card visually */
  .card:nth-child(3) { order: 1; }      /* move third card to start */
  .card:nth-child(4) { align-self: flex-start; } /* override card's alignment */
</style>
