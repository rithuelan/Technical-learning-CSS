    align-items: center;             /* vertical center */
    padding: 10px 20px;
    background: #1d4ed8;
    color: white;
  }
  .menu { display: flex; gap: 15px; }
  .menu div { cursor: pointer; }

  /* ===== Banner ===== */
  .banner {
    display: flex;                   /* flex container */
