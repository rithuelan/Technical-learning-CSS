    }

    input, textarea, button {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 8px;
    }

    /* focus pseudo-class */
    input:focus, textarea:focus {
      border-color: #1d4ed8;
      outline: none;
      background: #f0f8ff;
    }

    button {
      background: #1d4ed8;
      color: white;
      border: none;
