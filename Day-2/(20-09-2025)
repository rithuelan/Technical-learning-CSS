/*@import another css file in this css file*/


/*media atrule*/
    @media (max-width: 600px) {
    body {
        background-color: lightblue; /* only for small screens */
    }
    }

/*@fonnt-face in atrule*/
    @font-face {
    font-family: "MyFont";
    src: url("https://fonts.google.com/") format("woff2"),
    }

    h1 {
    font-family: "MyFont", sans-serif;
    }

    @keyframes bounce {
    0%   { transform: translateY(0); }
    50%  { transform: translateY(-50px); }
    100% { transform: translateY(0); }
    }

    .box {
    animation: bounce 2s infinite;
    }
