/* LEARNING CSS  */

/*syntax and selectors in css*/

/*basic selector*/
h2 {
    color: blue;
    font-weight: 700;
}

/*class*/
.styling {
    border: 10px;
    padding: 6%;
    border-radius: 5%;
    font-family: monospace;
}

/* Reset + universal selector */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      background-color: #f9f9f9;
      color: #333;
      line-height: 1.6;
    }

    /* Header */
    header {
      background: linear-gradient(to right, #1d4ed8, #9333ea);
      color: white;
      padding: 20px;
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }

    header h1 {
      font-size: 2.5em;
      margin: 0%;
    }

    /* Navigation */
    nav ul {
      list-style: none;
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 10px;
    }

    nav a {
      text-decoration: none;
      color: white;
      font-weight: bold;
    }

    /* pseudo-classes */
    nav a:hover {
      color: yellow;
    }

    nav a:active {
      color: red;
    }
    /* About section */
    #about {
